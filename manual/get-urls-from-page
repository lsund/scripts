#!/bin/bash

url=$1
filter=$2

links=$(wget -O - $url | \
      grep -o '<a href=['"'"'"][^"'"'"']*['"'"'"]' | \
      sed -e 's/^<a href=["'"'"']//' -e 's/["'"'"']$//')

filtered=$(echo "$links" | grep $filter)

echo $filtered | while read line
do
    echo $line
done

read -p "Download? [y/n] " yn
case $yn in
    [Yy]* )
        echo $filtered | while read line
        do
            wget $line
        done
        ;;
    [Nn]* )
        echo "O-kay"
        ;;
    * ) echo "yes or no mate"
esac

