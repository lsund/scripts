#!/bin/zsh

less=false
for file in $@; do
    if [[ ! -e $file ]]; then
        continue
    fi
    size=$(du -h $file | xargs | cut -d' ' -f1)
    value="${size:0:${#size}-1}"
    suffix="${size: -1}"
    if [[ $less == false && $suffix == "M" && $value -gt 10 ]]; then
        vared -p "File $file is larger than 10M. Open with less? [Y/n] " -c choice
        if [[ $choice != "n" ]]; then
            less=true
        fi
    fi
done

if [[ $# == 0 ]]; then
    nvim $(/usr/bin/ls | fzf)
elif [[ $less == true ]]; then
    less $@
else
    nvim $@
fi
